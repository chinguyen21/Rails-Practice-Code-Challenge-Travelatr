<h5>
<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <ul>
    <% @post.errors.full_messages.each do |message| %>
      <h3 id="error"><%= message %></h3>
    <% end %>
    </ul>
  <% end %>


  <label id="label">Title</label><br>
  <%= f.text_field :title %><br><br>

  <label id="label">Content </label><br>
  <%= f.text_area :content %><br><br>

  <label id="label">Likes</label><br>
  <%= f.number_field :likes %><br><br>

  <label id="label">Blogger</label><br>
  <%= f.collection_select :blogger_id, Blogger.all, :id, :name %><br><br>

  <label id="label">Destination</label><br>
  <%= f.collection_select :destination_id, Destination.all, :id, :name %><br><br>


  <%= f.submit %>
<% end %>

</h5>
